@model IEnumerable<MyMvcApp.Models.Product>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>產品清單</title>
</head>
<body>
    <header>
        <h1>產品清單</h1>
        <!-- Banner 區塊，連結至新增產品頁面 -->
        <div style="background-color: #f2f2f2; padding: 20px; text-align: center;">
            <a href="/Product/Create" style="font-size: 20px; text-decoration: none; color: #007ACC;">新增產品</a>
        </div>
    </header>
    <section>
        <table border="1" cellspacing="0" cellpadding="5">
            <tr>
                <th>ID</th>
                <th>產品名稱</th>
                <th>描述</th>
                <th>價格</th>
            </tr>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Price</td>
                </tr>
            }
        </table>
    </section>
</body>
</html>